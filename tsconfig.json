{
  "compilerOptions": {
    "inlineSourceMap": true,
    "lib": [
      "es5",
      "es2015",
      "es2016",
      "es2017.object",
      "es2017.intl",
      "es2017.typedarrays",
      "esnext.asynciterable"
    ],
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "target": "es2017",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}